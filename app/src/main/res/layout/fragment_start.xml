<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        tools:context=".activity.MainActivity"
>
    <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/app_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
    />

    <TextView
            android:id="@+id/enter_master_pswd_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_master_pswd_label"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:layout_marginTop="50dp"
    />
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/master_pswd_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/enter_master_pswd_label"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:password="true"
    />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/enter_master_pswd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/master_pswd_et"
            android:text="Войти"
            android:background="@color/btn_color"
    />

</RelativeLayout>